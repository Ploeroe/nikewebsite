---
import { Image } from "astro:assets";
import { arrowRight } from "../assets/icons";
import Button from "../components/Button.astro";
import ShoeCard from "../components/ShoeCard.astro";
import { shoes, statistics } from "../constants";
import { bigShoe1 } from "../assets/images";
---

<section id="home" class="w-full flex xl:flex-row justify-center min-h-screen gap-10 max-container">
    <div class="relative xl:w-2/5 flex flex-col justify-center items-start w-full max-xl:padding-x pt-28">
        <p class="text-xl font-montserrat text-coral-red">Our Summer Collections</p>
        <h1 class="mt-10 font-palanquin text-8xl max-sm:text-[72px] max-sm:leading-[82px] font-bold">
            <span class="xl:bg-white xl:whitespace-nowrap relative z-10 pr-10">
                The New Arrival
            </span>
            <br>
            <span class="text-coral-red inline-block mt-3">
                Nike
            </span> Shoes
        </h1>
        <p class="font-montserrat text-slate-gray text-lg leading-8 mt-6 mb-14 sm:max-w-sm">Discover stylish Nike arrivals quality comfort and innovation for your active life</p>
        <Button label="Shop now"></Button>
        <div class="flex justify-start items-start flex-wrap w-full mt-20 gap-16">
            {statistics.map((stat, index) => (
                <div class="flex flex-col items-start gap-2" key={index}>
                    <p class="text-4xl font-bold font-palanquin">{stat.value}</p>
                    <p class="leading-7 font-montserrat text-slate-gray">{stat.label}</p>
                </div>
            ))}
        </div>
    </div>

    <div class="relative flex-1 flex justify-center items-center xl:min-h-screen max-xl:py-40 bg-primary bg-hero bg-cover bg-center">
        <Image src={bigShoe1} alt="Shoe Collection" width={610} height={500} class="object-contain z-10"></Image>
        <div class="flex sm:gap-6 gap-4 absolute -bottom-[5%] sm:left-[10%] max-sm:px-6">
            {shoes.map((shoe, index) => (
                <ShoeCard
                    imgURL={shoe}
                    changeBigShoeImage={() => {/* Implement the image change logic here */}}
                    bigShoeImg={bigShoe1} // Assuming you want to pass the current image
                    key={index}
                ></ShoeCard>
            ))}
        </div>
    </div>
</section>
